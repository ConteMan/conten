{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/**.ts",
    "src/preload/*",
    "src/main/app/**/**.ts",
    "src/main/models/**/**.ts",
    "src/main/constants/**/**.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "paths": {
      "@main/*": [
        "./src/main/*"
      ]
    }
  }
}
